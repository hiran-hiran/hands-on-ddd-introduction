{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"],
    },
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"],
}
